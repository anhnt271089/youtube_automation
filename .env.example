# YouTube API
YOUTUBE_API_KEY=your_youtube_api_key_here

# Google Services
GOOGLE_CLIENT_EMAIL=your_service_account_email
GOOGLE_PRIVATE_KEY=your_private_key_here
GOOGLE_DRIVE_FOLDER_ID=your_main_drive_folder_id

# Notion
NOTION_TOKEN=your_notion_integration_token
NOTION_DATABASE_ID=your_notion_database_id

# OpenAI
OPENAI_API_KEY=your_openai_api_key

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key

# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Digital Ocean Spaces
DO_SPACES_ENDPOINT=nyc3.digitaloceanspaces.com
DO_SPACES_REGION=nyc3
DO_SPACES_ACCESS_KEY=your_do_spaces_access_key
DO_SPACES_SECRET_KEY=your_do_spaces_secret_key
DO_SPACES_BUCKET_NAME=your_bucket_name
DO_SPACES_CDN_URL=https://your-cdn-endpoint.com

# Application Settings
NODE_ENV=development
LOG_LEVEL=info
CONCURRENT_WORKERS=4

# Image Generation Settings
# Limit number of images generated per video (0 = no limit)
# Set to 5 for testing to save costs and speed up workflow
IMAGE_GENERATION_LIMIT=5

# YouTube Video Format Images (16:9 aspect ratio)
IMAGE_ASPECT_RATIO=16:9
IMAGE_WIDTH=1920
IMAGE_HEIGHT=1080

# Cost Optimization Settings
# dall-e-2 ($0.02/image), dall-e-3 ($0.04-0.08/image)
IMAGE_MODEL=dall-e-2
COST_TRACKING_ENABLED=true
MAX_IMAGE_COST_PER_VIDEO=1.50

# Auto-approval Settings
# Set to true for testing to skip manual approval step
AUTO_APPROVE_SCRIPTS=false

# Script Breakdown Options
# Google Sheets is now the primary method for script breakdowns
# Notion is used as fallback if Google Sheets fails
# Make sure Google Sheets API is enabled in Google Cloud Console
# Your main folder must be shared with the service account
GOOGLE_SHEETS_PRIMARY=true

# Transcript Fallback Configuration
# Enable comprehensive fallback methods when YouTube transcripts are not available
ENABLE_TRANSCRIPT_FALLBACKS=true

# Whisper API fallback (requires OpenAI API key, costs money per minute)
# Only enable if you need high-quality transcripts for videos without captions
ENABLE_WHISPER_FALLBACK=false
MAX_AUDIO_DURATION_MINUTES=15

# Video description as transcript fallback (free, always recommended)
ENABLE_DESCRIPTION_FALLBACK=true

# Comments analysis fallback (uses YouTube API quota, moderate quality)
ENABLE_COMMENTS_ANALYSIS=false

# Fallback methods priority (comma-separated)
# Options: alternative-libs, whisper, description, comments
# Processed in order until one succeeds
TRANSCRIPT_FALLBACK_METHODS=alternative-libs,description,comments